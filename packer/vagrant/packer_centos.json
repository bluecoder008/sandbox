
{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/setup.sh", "scripts/vagrant.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant' | sudo -S sh '{{ .Path }}'"
        }
      }
    }
  ],
	"builders": [
		{
		"type": "virtualbox-iso",
		"boot_command": [
				"<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.5-x86_64/ks.cfg<enter><wait>"
		],
		"boot_wait": "5s",
		"disk_size": 40000,
		"guest_os_type": "RedHat_64",
		"headless": true,
		"http_directory": "./http",
		"iso_checksum": "f21a71e8e31df73297bdd1ccd4a64a36831284bd",
		"iso_checksum_type": "sha1",
		"iso_urls": "http://mirrors.kernel.org/centos/6.5/isos/x86_64/CentOS-6.5-x86_64-minimal.iso",
		"output_directory": "/tmp/packer",
		"ssh_password": "vagrant",
		"ssh_username": "root",
		"ssh_port": 22,
		"ssh_wait_timeout": "10000s",
		"shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'"
		}
	],
	"post-processors": [
		{
			"output": "packer_centos_virtualbox.box",
			"type": "vagrant"
		}
	]
}

